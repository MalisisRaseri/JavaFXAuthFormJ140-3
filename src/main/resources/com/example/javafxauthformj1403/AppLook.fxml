<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane id="StackPane" prefHeight="275" prefWidth="305" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxauthformj1403.AppController">
    <padding>
        <Insets bottom="50" left="50" right ="50" top="50"/>
    </padding>
    <children>
        <GridPane id="GridPane" prefHeight="275" prefWidth="305" hgap="5" vgap="10" >
            <children>
                <Label GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="1" text="WELCOME" fx:id="welcomeLabel" style="-fx-font: BOLD 20 Arial;"/>
                <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="User Name:  " fx:id="nameLabel" style="-fx-font-size: 12"/>
                <TextField text="admin" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="textName" style="-fx-font-size: 9"/>
                <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Password:  " fx:id="passwordLabel" style="-fx-font-size: 12"/>
                <TextField text="admin" GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="textPassword" style="-fx-font-size: 9"/>
                <Button GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="1" GridPane.rowSpan="1" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM" text="Sign in" onAction="#handleButtonAction" fx:id="buttonSignIn"
                        style="-fx-font-size: 10; -fx-font-weight: BOLD; -fx-background-color: lightgrey; -fx-border-color: grey;"/>
                <Label GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" GridPane.rowSpan="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" text="Check connection status" fx:id="textLabel" />
            </children>
        </GridPane>
    </children>
</StackPane>




